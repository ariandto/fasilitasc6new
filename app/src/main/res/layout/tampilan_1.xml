<FrameLayout
    android:id="@+id/main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#031F3D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perpustakaan_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Ruang Perpustakaan"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#031F3D" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lib6_image"
                    android:layout_width="265dp"
                    android:layout_height="157dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="lib6_image"
                    android:src="@drawable/lib6"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/lib7_image"
                    android:layout_width="265dp"
                    android:layout_height="157dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="lib7_image"
                    android:src="@drawable/lib7"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/lib8_image"
                    android:layout_width="265dp"
                    android:layout_height="157dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="lib8_image"
                    android:src="@drawable/lib8"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/lib9_image"
                    android:layout_width="265dp"
                    android:layout_height="157dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="lib9_image"
                    android:src="@drawable/lib9"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/lib10_image"
                    android:layout_width="265dp"
                    android:layout_height="157dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="lib10_image"
                    android:src="@drawable/lib10"
                    android:scaleType="fitXY" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>